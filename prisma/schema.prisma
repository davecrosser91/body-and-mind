generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Achievement {
  id         String   @id @default(cuid())
  type       String
  unlockedAt DateTime @default(now())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

model Activity {
  id                                                  String               @id @default(cuid())
  name                                                String
  pillar                                              Pillar
  subCategory                                         String
  frequency                                           Frequency            @default(DAILY)
  description                                         String?
  points                                              Int                  @default(25)
  isHabit                                             Boolean              @default(true)
  cueType                                             CueType?
  cueValue                                            String?
  createdAt                                           DateTime             @default(now())
  updatedAt                                           DateTime             @updatedAt
  archived                                            Boolean              @default(false)
  userId                                              String
  user                                                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  completions                                         ActivityCompletion[]
  autoTrigger                                         AutoTrigger?         @relation("AutoTrigger_activityIdToActivity")
  triggeredBy                                         AutoTrigger[]        @relation("AutoTrigger_triggerActivityIdToActivity")
  trainingTemplate                                    TrainingTemplate?

  @@index([pillar])
  @@index([subCategory])
  @@index([userId])
}

model ActivityCompletion {
  id                String              @id @default(cuid())
  completedAt       DateTime            @default(now())
  pointsEarned      Int
  details           String?
  source            Source              @default(MANUAL)
  activityId        String
  activity          Activity            @relation(fields: [activityId], references: [id], onDelete: Cascade)
  trainingDetails   TrainingDetails?
  meditationDetails MeditationDetails?
  journalEntry      JournalEntry?

  @@index([activityId])
  @@index([completedAt])
}

model AutoTrigger {
  id                String          @id @default(cuid())
  activityId        String          @unique
  triggerType       AutoTriggerType
  thresholdValue    Float?
  workoutTypeId     Int?
  triggerActivityId String?
  isActive          Boolean         @default(true)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  activity          Activity        @relation("AutoTrigger_activityIdToActivity", fields: [activityId], references: [id], onDelete: Cascade)
  triggerActivity   Activity?       @relation("AutoTrigger_triggerActivityIdToActivity", fields: [triggerActivityId], references: [id])

  @@index([activityId])
  @@index([triggerType])
}

model CustomSubcategory {
  id        String   @id @default(cuid())
  userId    String
  pillar    Pillar
  name      String
  key       String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, pillar, key])
  @@index([userId])
}

model DailyGoal {
  id             String   @id @default(cuid())
  userId         String
  date           DateTime @db.Date
  bodyCompleted  Boolean  @default(false)
  mindCompleted  Boolean  @default(false)
  bodyActivities String[]
  mindActivities String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model DailyScore {
  id              String   @id @default(cuid())
  date            DateTime @db.Date
  bodyScore       Int
  mindScore       Int
  balanceIndex    Int
  trainingScore   Int?
  sleepScore      Int?
  nutritionScore  Int?
  meditationScore Int?
  readingScore    Int?
  learningScore   Int?
  whoopStrain     Float?
  whoopSleep      Float?
  whoopRecovery   Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  bodyComplete    Boolean  @default(false)
  bodyPoints      Int      @default(0)
  mindComplete    Boolean  @default(false)
  mindPoints      Int      @default(0)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([userId])
}

model HabitStack {
  id               String            @id @default(cuid())
  userId           String
  name             String
  description      String?
  cueType          CueType?
  cueValue         String?
  isPreset         Boolean           @default(false)
  presetKey        String?
  isActive         Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  completionBonus  Int               @default(20)
  activityIds      String[]
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  stackCompletions StackCompletion[]

  @@index([userId])
}

model Habitanimal {
  id              String          @id @default(cuid())
  type            HabitanimalType
  species         String
  name            String
  level           Int             @default(1)
  xp              Int             @default(0)
  health          Int             @default(100)
  evolutionStage  Int             @default(1)
  lastInteraction DateTime        @default(now())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Quote {
  id        String        @id @default(cuid())
  text      String
  author    String?
  category  QuoteCategory
  createdAt DateTime      @default(now())

  @@index([category])
  @@index([createdAt])
}

model StackCompletion {
  id                String     @id @default(cuid())
  stackId           String
  date              DateTime   @db.Date
  completedAt       DateTime   @default(now())
  bonusPointsEarned Int        @default(0)
  streakDay         Int        @default(1)
  habitStack        HabitStack @relation(fields: [stackId], references: [id], onDelete: Cascade)

  @@unique([stackId, date])
  @@index([date])
  @@index([stackId])
}

model Streak {
  id             String    @id @default(cuid())
  current        Int       @default(0)
  longest        Int       @default(0)
  lastActiveDate DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  userId         String
  pillarKey      String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, pillarKey])
  @@index([userId])
}

model User {
  id                  String              @id @default(cuid())
  email               String              @unique
  passwordHash        String
  name                String?
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  achievements        Achievement[]
  activities          Activity[]
  customSubcategories CustomSubcategory[]
  dailyGoals          DailyGoal[]
  dailyScores         DailyScore[]
  habitStacks         HabitStack[]
  habitanimals        Habitanimal[]
  streaks             Streak[]
  weightConfig        WeightConfig?
  whoopConnection     WhoopConnection?
}

model WeightConfig {
  id               String       @id @default(cuid())
  userId           String       @unique
  preset           WeightPreset @default(BALANCED)
  trainingWeight   Int          @default(35)
  sleepWeight      Int          @default(35)
  nutritionWeight  Int          @default(30)
  meditationWeight Int          @default(40)
  readingWeight    Int          @default(30)
  learningWeight   Int          @default(30)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WhoopConnection {
  id           String    @id @default(cuid())
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  lastSync     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  userId       String    @unique
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Training template defaults (linked to Activity for recurring workouts)
model TrainingTemplate {
  id               String            @id @default(cuid())
  activityId       String            @unique
  activity         Activity          @relation(fields: [activityId], references: [id], onDelete: Cascade)
  workoutType      WorkoutType?
  durationMinutes  Int?
  intensity        Intensity?
  muscleGroups     MuscleGroup[]
  location         TrainingLocation?
  defaultExercises Json?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@index([activityId])
}

// Training details for individual workout completions
model TrainingDetails {
  id                   String             @id @default(cuid())
  activityCompletionId String             @unique
  activityCompletion   ActivityCompletion @relation(fields: [activityCompletionId], references: [id], onDelete: Cascade)
  workoutType          WorkoutType?
  durationMinutes      Int?
  intensity            Intensity?
  muscleGroups         MuscleGroup[]
  location             TrainingLocation?
  rpe                  Int?
  avgHeartRate         Int?
  maxHeartRate         Int?
  hrZones              Json?
  calories             Int?
  distance             Float?
  source               Source?
  externalWorkoutId    String?
  externalData         Json?
  exercises            Exercise[]
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@index([activityCompletionId])
  @@index([source])
  @@index([externalWorkoutId])
}

// Individual exercises within a workout
model Exercise {
  id                String          @id @default(cuid())
  trainingDetailsId String
  trainingDetails   TrainingDetails @relation(fields: [trainingDetailsId], references: [id], onDelete: Cascade)
  name              String
  sets              Int?
  reps              String?
  weight            Float?
  notes             String?
  order             Int             @default(0)
  createdAt         DateTime        @default(now())

  @@index([trainingDetailsId])
}

// Meditation details for individual meditation completions
model MeditationDetails {
  id                   String              @id @default(cuid())
  activityCompletionId String              @unique
  activityCompletion   ActivityCompletion  @relation(fields: [activityCompletionId], references: [id], onDelete: Cascade)
  durationMinutes      Int
  technique            MeditationTechnique?
  moodBefore           Mood?
  moodAfter            Mood?
  guidedApp            String?
  notes                String?
  source               Source?
  externalId           String?
  createdAt            DateTime            @default(now())

  @@index([activityCompletionId])
}

// Journal entries for journaling completions
model JournalEntry {
  id                   String              @id @default(cuid())
  activityCompletionId String              @unique
  activityCompletion   ActivityCompletion  @relation(fields: [activityCompletionId], references: [id], onDelete: Cascade)
  entryType            JournalEntryType
  mood                 Mood?
  content              String              @db.Text
  wordCount            Int
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt

  @@index([activityCompletionId])
  @@index([entryType])
  @@index([createdAt])
}

enum AutoTriggerType {
  WHOOP_RECOVERY_ABOVE
  WHOOP_RECOVERY_BELOW
  WHOOP_SLEEP_ABOVE
  WHOOP_STRAIN_ABOVE
  WHOOP_WORKOUT_TYPE
  ACTIVITY_COMPLETED
}

enum Category {
  FITNESS
  MINDFULNESS
  NUTRITION
  SLEEP
  LEARNING
}

enum CueType {
  TIME
  LOCATION
  AFTER_ACTIVITY
}

enum Frequency {
  DAILY
  WEEKLY
  CUSTOM
}

enum HabitanimalType {
  FITNESS
  MINDFULNESS
  NUTRITION
  SLEEP
  LEARNING
}

enum Pillar {
  BODY
  MIND
}

enum QuoteCategory {
  MOTIVATION
  CONSISTENCY
  BODY
  MIND
  BALANCE
  ATOMIC_HABITS
}

enum Source {
  MANUAL
  WHOOP
  APPLE_HEALTH
  GARMIN
  STRAVA
  FITBIT
  AUTO_TRIGGER
}

enum WorkoutType {
  STRENGTH
  CARDIO
  HIIT
  YOGA
  SPORTS
  WALK
  STRETCH
  OTHER
}

enum Intensity {
  LIGHT
  MODERATE
  HARD
  MAX
}

enum MuscleGroup {
  UPPER
  LOWER
  CORE
  FULL_BODY
}

enum TrainingLocation {
  GYM
  HOME
  OUTDOOR
  OTHER
}

enum WeightPreset {
  BALANCED
  ATHLETE
  RECOVERY
  KNOWLEDGE
  CUSTOM
}

enum MeditationTechnique {
  BREATHING
  GUIDED
  BODY_SCAN
  MINDFULNESS
  VISUALIZATION
  MANTRA
  OTHER
}

enum JournalEntryType {
  GRATITUDE
  REFLECTION
  FREE_WRITE
  MORNING_PAGES
  EVENING_REVIEW
}

enum Mood {
  GREAT
  GOOD
  NEUTRAL
  LOW
  STRESSED
}
