generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Achievement {
  id         String   @id
  type       String
  unlockedAt DateTime @default(now())
  userId     String
  User       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

model Activity {
  id                                                  String               @id
  name                                                String
  pillar                                              Pillar
  subCategory                                         String
  frequency                                           Frequency            @default(DAILY)
  description                                         String?
  points                                              Int                  @default(25)
  isHabit                                             Boolean              @default(true)
  cueType                                             CueType?
  cueValue                                            String?
  createdAt                                           DateTime             @default(now())
  updatedAt                                           DateTime
  archived                                            Boolean              @default(false)
  userId                                              String
  User                                                User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  ActivityCompletion                                  ActivityCompletion[]
  AutoTrigger_AutoTrigger_activityIdToActivity        AutoTrigger?         @relation("AutoTrigger_activityIdToActivity")
  AutoTrigger_AutoTrigger_triggerActivityIdToActivity AutoTrigger[]        @relation("AutoTrigger_triggerActivityIdToActivity")

  @@index([pillar])
  @@index([subCategory])
  @@index([userId])
}

model ActivityCompletion {
  id           String   @id
  completedAt  DateTime @default(now())
  pointsEarned Int
  details      String?
  source       Source   @default(MANUAL)
  activityId   String
  Activity     Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@index([activityId])
  @@index([completedAt])
}

model AutoTrigger {
  id                                               String          @id
  activityId                                       String          @unique
  triggerType                                      AutoTriggerType
  thresholdValue                                   Float?
  workoutTypeId                                    Int?
  triggerActivityId                                String?
  isActive                                         Boolean         @default(true)
  createdAt                                        DateTime        @default(now())
  updatedAt                                        DateTime
  Activity_AutoTrigger_activityIdToActivity        Activity        @relation("AutoTrigger_activityIdToActivity", fields: [activityId], references: [id], onDelete: Cascade)
  Activity_AutoTrigger_triggerActivityIdToActivity Activity?       @relation("AutoTrigger_triggerActivityIdToActivity", fields: [triggerActivityId], references: [id])

  @@index([activityId])
  @@index([triggerType])
}

model CustomSubcategory {
  id        String   @id
  userId    String
  pillar    Pillar
  name      String
  key       String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, pillar, key])
  @@index([userId])
}

model DailyGoal {
  id             String   @id
  userId         String
  date           DateTime @db.Date
  bodyCompleted  Boolean  @default(false)
  mindCompleted  Boolean  @default(false)
  bodyActivities String[]
  mindActivities String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime
  User           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
}

model DailyScore {
  id              String   @id
  date            DateTime @db.Date
  bodyScore       Int
  mindScore       Int
  balanceIndex    Int
  trainingScore   Int?
  sleepScore      Int?
  nutritionScore  Int?
  meditationScore Int?
  readingScore    Int?
  learningScore   Int?
  whoopStrain     Float?
  whoopSleep      Float?
  whoopRecovery   Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  userId          String
  bodyComplete    Boolean  @default(false)
  bodyPoints      Int      @default(0)
  mindComplete    Boolean  @default(false)
  mindPoints      Int      @default(0)
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([userId])
}

model HabitStack {
  id              String            @id
  userId          String
  name            String
  description     String?
  cueType         CueType?
  cueValue        String?
  isPreset        Boolean           @default(false)
  presetKey       String?
  isActive        Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  completionBonus Int               @default(20)
  activityIds     String[]
  User            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  StackCompletion StackCompletion[]

  @@index([userId])
}

model Habitanimal {
  id              String          @id
  type            HabitanimalType
  species         String
  name            String
  level           Int             @default(1)
  xp              Int             @default(0)
  health          Int             @default(100)
  evolutionStage  Int             @default(1)
  lastInteraction DateTime        @default(now())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime
  userId          String
  User            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Quote {
  id        String        @id
  text      String
  author    String?
  category  QuoteCategory
  createdAt DateTime      @default(now())

  @@index([category])
  @@index([createdAt])
}

model StackCompletion {
  id                String     @id
  stackId           String
  date              DateTime   @db.Date
  completedAt       DateTime   @default(now())
  bonusPointsEarned Int        @default(0)
  streakDay         Int        @default(1)
  HabitStack        HabitStack @relation(fields: [stackId], references: [id], onDelete: Cascade)

  @@unique([stackId, date])
  @@index([date])
  @@index([stackId])
}

model Streak {
  id             String    @id
  current        Int       @default(0)
  longest        Int       @default(0)
  lastActiveDate DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime
  userId         String
  pillarKey      String
  User           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, pillarKey])
  @@index([userId])
}

model User {
  id                String              @id
  email             String              @unique
  passwordHash      String
  name              String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  Achievement       Achievement[]
  Activity          Activity[]
  CustomSubcategory CustomSubcategory[]
  DailyGoal         DailyGoal[]
  DailyScore        DailyScore[]
  HabitStack        HabitStack[]
  Habitanimal       Habitanimal[]
  Streak            Streak[]
  WeightConfig      WeightConfig?
  WhoopConnection   WhoopConnection?
}

model WeightConfig {
  id               String       @id
  userId           String       @unique
  preset           WeightPreset @default(BALANCED)
  trainingWeight   Int          @default(35)
  sleepWeight      Int          @default(35)
  nutritionWeight  Int          @default(30)
  meditationWeight Int          @default(40)
  readingWeight    Int          @default(30)
  learningWeight   Int          @default(30)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime
  User             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WhoopConnection {
  id           String    @id
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  lastSync     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  userId       String    @unique
  User         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum AutoTriggerType {
  WHOOP_RECOVERY_ABOVE
  WHOOP_RECOVERY_BELOW
  WHOOP_SLEEP_ABOVE
  WHOOP_STRAIN_ABOVE
  WHOOP_WORKOUT_TYPE
  ACTIVITY_COMPLETED
}

enum Category {
  FITNESS
  MINDFULNESS
  NUTRITION
  SLEEP
  LEARNING
}

enum CueType {
  TIME
  LOCATION
  AFTER_ACTIVITY
}

enum Frequency {
  DAILY
  WEEKLY
  CUSTOM
}

enum HabitanimalType {
  FITNESS
  MINDFULNESS
  NUTRITION
  SLEEP
  LEARNING
}

enum Pillar {
  BODY
  MIND
}

enum QuoteCategory {
  MOTIVATION
  CONSISTENCY
  BODY
  MIND
  BALANCE
  ATOMIC_HABITS
}

enum Source {
  MANUAL
  WHOOP
  APPLE_HEALTH
  AUTO_TRIGGER
}

enum WeightPreset {
  BALANCED
  ATHLETE
  RECOVERY
  KNOWLEDGE
  CUSTOM
}
